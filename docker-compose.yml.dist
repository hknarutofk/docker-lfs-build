version: '2'

services:
  lfs:
    restart: unless-stopped
    privileged: true
    image: evilfreelancer/docker-lfs-build
    volumes:      
      - ./lfs:/lfs
      - ./book:/lfs/book
      - ./image:/lfs/image
      - ./sources:/lfs/sources
      - ./tools:/lfs/tools      
      - ./dist:/dist
    entrypoint: ["sleep", "inf"]
